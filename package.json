{
  "name": "react-hook-resizable-element",
  "version": "0.0.1",
  "description": "React hook to resize an element based on content",
  "main": "./lib/index.js",
  "type": "module",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "lint": "eslint ./src/ ./test/ --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrew-oxenburgh/react-hook-resizable-element.git"
  },
  "license": "MIT",
  "author": {
    "name": "Andrew Oxenburgh",
    "email": "andrew.oxenburgh@gmail.com",
    "url": "https://github.com/andrew-oxenburgh"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "react",
    "hook",
    "typescript",
    "useeffect",
    "jest",
    "husky",
    "commitizen",
    "semantic-release",
    "codecov"
  ],
  "bugs": {
    "url": "https://github.com/andrew-oxenburgh/react-hook-resizable-element/issues"
  },
  "homepage": "https://github.com/andrew-oxenburgh/react-hook-resizable-element#readme",
  "devDependencies": {
    "react": "^18.2",
    "@types/jest": "^27.5.2",
    "@types/node": "^12.20.11",
    "@types/react": "^18.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^7.25.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^6.0.0",
    "jest": "^27.2.0",
    "lint-staged": "^13.2.1",
    "semantic-release": "^21.0.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}